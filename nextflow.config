// 基础配置文件

// 进程资源配置
process {
    // 默认配置
    cpus = 1
    memory = '2 GB'
    time = '1h'
    
    // 错误处理
    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries = 3
    maxErrors = '-1'
    
    // 输出配置
    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: 'copy',
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]
    
    // 计算密集型process的资源配置
    withName: 'build_star_index' {
        cpus = 8
        memory = '32 GB'
        time = '4h'
    }
    
    withName: 'run_fastp' {
        cpus = 8
        memory = '16 GB'
        time = '2h'
    }
    
    withName: 'run_star_align' {
        cpus = 8
        memory = '32 GB'
        time = '6h'
    }
    
    withName: 'run_featurecounts_batch' {
        cpus = 8
        memory = '16 GB'
        time = '2h'
    }
}

// 容器配置
singularity {
    enabled = false
    autoMounts = true
}

docker {
    enabled = false
    userEmulation = true
}

// 调试配置
debug {
    cleanup = false
}